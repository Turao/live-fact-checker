<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Date</th>
      <th>Made by</th>
      <th>At Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% statements.each do |statement| %>
      <tr>
        <td><%= statement.content %></td>
        <td><%= statement.date %></td>
        <td><%= link_to statement.politician.getName, statement.politician %></td>
        <td><%= link_to statement.event.title, statement.event %></td>

        <td><%= link_to 'Show', statement %></td>
        <td><%= link_to 'Edit', edit_statement_path(statement) %></td>
        <td><%= link_to 'Destroy', statement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>