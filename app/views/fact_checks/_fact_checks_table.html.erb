<table>
  <thead>
    <tr>
      <th> Statement </th>
      <th> Politician </th>
      <th> Veracity </th>
      <th> Comment </th>
      <th> Checker </th>
      <th> Verified? </th>
      <th> Moderator </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% fact_checks.each do |fact_check| %>
      <tr>
        <td><%= fact_check.statement.content %></td>
        <td><%= link_to fact_check.statement.politician.getName, fact_check.statement.politician %></td>

        <td><%= fact_check.veracity %></td>
        <td><%= fact_check.comment %></td>

        <% if fact_check.checker != nil %>      
          <td><%= link_to fact_check.checker.getName, fact_check.checker %></td>
        <% else %>
          <td> [deleted] </td>
        <% end %>

        <td><%= fact_check.verifiedByMod %></td>

        <% if fact_check.moderator != nil %>
          <td><%= link_to fact_check.moderator.getName, fact_check.moderator %></td>
        <% else %>
          <td></td>
        <% end %>

        <!-- <td><%= link_to 'Show', fact_check %></td> -->
        <td><%= link_to 'Edit', edit_fact_check_path(fact_check) %></td>
        <td><%= link_to 'Destroy', fact_check, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>