<p id="notice"><%= notice %></p>

<h1>Fact Checks</h1>

<table>
  <thead>
    <tr>
      <th>Veracity</th>
      <th>Comment</th>
      <th>Verifiedbymod</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fact_checks.each do |fact_check| %>
      <tr>
        <td><%= fact_check.veracity %></td>
        <td><%= fact_check.comment %></td>
        <td><%= fact_check.verifiedByMod %></td>
        <td><%= link_to 'Show', fact_check %></td>
        <td><%= link_to 'Edit', edit_fact_check_path(fact_check) %></td>
        <td><%= link_to 'Destroy', fact_check, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fact Check', new_fact_check_path %>
