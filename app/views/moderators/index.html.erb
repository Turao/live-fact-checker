<p id="notice"><%= notice %></p>

<h1>Moderators</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Event</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @moderators.each do |moderator| %>
      <tr>
        <td><%= moderator.person.name %></td>
        <td><%= moderator.person.email %></td>
        <td><%= moderator.event.title %></td>
        <td><%= moderator.event.date %></td>
        <td><%= link_to 'Show', moderator %></td>
        <td><%= link_to 'Edit', edit_moderator_path(moderator) %></td>
        <td><%= link_to 'Destroy', moderator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Moderator', new_moderator_path %>
