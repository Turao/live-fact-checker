<p id="notice"><%= notice %></p>

<h1>Politicians</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Party</th>
      <th>Abbreviation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @politicians.each do |politician| %>
      <tr>
        <td><%= politician.person.name %></td>
        <td><%= politician.person.email %></td>

        <% if politician.party != nil %>
          <td><%= politician.party.name %></td>
          <td><%= politician.party.abbreviation %></td>
        <% else %>
          <td> - </td>
          <td> - </td>
        <% end %>

        <td><%= link_to 'Show', politician %></td>
        <td><%= link_to 'Edit', edit_politician_path(politician) %></td>
        <td><%= link_to 'Destroy', politician, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Politician', new_politician_path %>
